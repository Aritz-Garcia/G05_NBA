<MudDrawer @bind-Open="@open" Elevation="1">
    <MudDrawerHeader>
        <MudNavLink Href="" Match="NavLinkMatch.All" @onmouseover="@(() => { animacion = true; })" @onmouseout="@(() => { animacion = false; })"><MudImage Src="@ruta" @onmouseover="@(() => { animacion = true; })" @onmouseout="@(() => { animacion = false; })" Height="70" /></MudNavLink>
    </MudDrawerHeader>
    <MudNavMenu Rounded="true" Color="Color.Info" Class="pa-2">
        <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Person" IconColor="@Color.Info">Jugadores</MudNavLink>
        <MudNavLink Href="equipos" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Groups" IconColor="@Color.Info">Equipos</MudNavLink>
        <MudNavLink Href="clasificacion" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.FormatListNumbered" IconColor="@Color.Info">Clasificación</MudNavLink>
        <MudNavLink Href="partidos" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.SportsBasketball" IconColor="@Color.Info">Partidos</MudNavLink>
        <MudNavLink Href="graficos" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.StackedLineChart" IconColor="@Color.Info">Graficos</MudNavLink>
        <MudNavLink Href="mapa" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Map" IconColor="@Color.Info">Mapa</MudNavLink>
        <MudNavLink Href="info" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Map" IconColor="@Color.Info">Info</MudNavLink>
    </MudNavMenu>
</MudDrawer>



@code {

    [Parameter]
    public bool open { get; set; }

    private bool animacion = false;

    private string ruta => animacion ? "/img/logo/Logo_NBAS.gif" : "/img/logo/Logo_2.0.png";

}
